= link_to "login", new_login_path, class: "btn"
table class="editable_table"
	thead
		tr
			th email
			th name
			th lastname
			th title
			th action
	tbody
		= render partial: "form_tr"

<input type="text" id="editor" tabindex="1">

javascript:
	var gCurCell;
	
	$(document).ready(function(){
	    $('.editable_table td').click(function(){
	        gCurCell = this;
	        var lPos = $(this).position();
	        $('#editor').css({
	            'top': (lPos.top) + 'px',
	            'left': (lPos.left) + 'px',
	            'width': $(this).width(),
	            'height': $(this).height()
	        }).val($(this).html()).show().focus();
	    });
	    $('#editor').blur(function(){
	        $(this).hide();
	        $(gCurCell).html($(this).val());

	        $.ajax({
	        	url: "users/"
	        	//type: "PUT",
	        	//data: 
	        });

	    });
	});